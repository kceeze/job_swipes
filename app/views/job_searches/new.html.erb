<div class="overall-spacing">
  <%= form_for  [@worker, @job_search] do |f| %>	
    <div class="form-group">
        <%= f.label :search %>
        <%= f.text_field :search_string, class: "form-control" %>
    </div>

    <div class="form-group"> 
    		<%= f.label :distance %>
    		<input type="text" id="distance-field" name="distance" class="form-control">
    </div>

     <div class="actions">
      <%= f.submit "Submit", class: "btn btn-primary" %>
      <%= hidden_field_tag 'worker_id', "#{@worker.id}" %>
    </div>
   
    <% if @worker.physical_addresses.present? %>
    	<h3>Your Address </h3>
    	<% address = @worker.physical_addresses.first %>
  	<div>
  		<%= address[:street] %>	 
  	</div>

  	<div>
  		<%= address[:city] %>	 
  	</div>

  	<div>
  		<%= address[:state] %>	 
  	</div>

  	<div>
  		<%= address[:zip] %>	 
  	</div>
    <% end %>
  <% end %>

  <%= link_to "Back", worker_job_searches_path(params[:worker_id]) %> 
</div>
